<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
	<h1 class="h2">Add New User</h1>
</div>

<div class="row">
	<%= form_for @user ,:url => {:action => :create, :controller => :user} do |f| %>
	  <div class="form-group">
		  <%= f.label :name %>
		  <%= f.text_field :name, class: 'form-control', placeholder: 'User Name' %><br>
	  </div>
	  <div class="form-group">
		  <%= f.label :email %>
		  <%= f.text_field :email, class: 'form-control', placeholder: 'Email Id' %><br>
	  </div>
	  <div class="form-group">
		  <%= f.label :user_type %>
		  <%= select_tag(:user_type, options_for_select([['Admin', 0], ['User', 1]],1), class: 'form-control') %><br>
	  </div>
	   <%= f.submit 'Create', :class=> "btn btn-primary" %>
	<%end%>
</div>