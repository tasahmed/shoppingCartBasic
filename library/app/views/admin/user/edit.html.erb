<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
	<h1 class="h2">Edit User</h1>
</div>

<div class="row">
	<%= form_for @user ,:url => {:action => :update, :controller => :user} do |f| %>
	  <div class="form-group">
		  <%= f.label :name %>
		  <%= f.text_field :name, class: 'form-control', placeholder: 'User Name' %><br>
	  </div>
	  <div class="form-group">
		  <%= f.label :email %>
		  <%= f.text_field :email, class: 'form-control', placeholder: 'Email Id', readonly: true %><br>
	  </div>
	  <div class="form-group">
		  <%= f.label :user_type %>
		  <%= f.select :user_type, [['Admin', 0], ['User', 1]], {}, {class: "form-control"} %>
		  <br>
	  </div>
	   <%= f.submit 'Update', :class=> "btn btn-primary" %>
	<%end%>
</div>