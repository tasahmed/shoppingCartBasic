<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %> ?> alert-dismissible fade show" role="alert" style="margin-top:3%;">
      <% if value.kind_of?(Array) %>
      <h5>We encountered the below error(s):</h5>  
      <ul>
        <% value.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul> 
      <% else %>
        <%= value %>
      <% end %>   
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
<% end %>